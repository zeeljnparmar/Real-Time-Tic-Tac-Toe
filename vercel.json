{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/react",
        "config": {
          "distDir": "client/build"
        }
      },
      {
        "src": "backend/package.json",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/api/$1"
      },
      {
        "src": "/(.*)",
        "dest": "client/build/$1"
      }
    ]
  }
  